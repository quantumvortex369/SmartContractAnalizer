                self.contract_address.clear();
                self.analysis_result = None;
            }
            
            // Mostrar estado del anÃ¡lisis
            if self.is_analyzing {
                ui.spinner();
                ui.label("Analizando contrato...");
            }

            // Mostrar resultados o errores
            if let Some(result) = &self.analysis_result {
